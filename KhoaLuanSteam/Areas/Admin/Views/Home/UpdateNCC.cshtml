@{
    ViewBag.Title = "UpdateNCC";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
@model  KhoaLuanSteam.Models.NHACUNGCAP
<h2 style="text-align: center;">Cập nhật nhà cung cấp</h2>
@using (Html.BeginForm("UpdateNCC", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @if (ViewBag.Success != null)
        {
            <div id="thongBaoThanhCong" class="alert alert-success">@ViewBag.Success</div>
        }
        @Html.HiddenFor(model => model.MaNCC)
        <div class="form-group">
            <label class="control-label col-md-2">Tên nhà cung cấp</label>
            @* @Html.LabelFor(model => model.TenNCC, htmlAttributes: new { @class = "control-label col-md-2" }) *@
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TenNCC, new { @class = "form-control", placeHolder = "", @required = "required" })
                @Html.ValidationMessageFor(model => model.TenNCC, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Địa chỉ</label>
            @* @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-2" }) *@
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control", placeHolder = "", @required = "required" })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Số điện thoại</label>
            @* @Html.LabelFor(model => model.DienThoai, htmlAttributes: new { @class = "control-label col-md-2" }) *@
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DienThoai, new { @class = "form-control", placeHolder = "", @required = "required" })
                @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="margin-left: 13px;">
            <span>
                @Html.ActionLink("Trở về", "AD_ShowNhaCungCap",new {id=""},new { @class = "btn btn-primary"})
            </span>
            <span class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </span>
        </div>
    </div>
}
