@{
    ViewBag.Title = "InsertDonNhapHang";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}


@model KhoaLuanSteam.Models.DonDatHangNCC


<h2 style="text-align: center;">Chọn đơn hàng nhập</h2>
@using (Html.BeginForm("InsertDonNhapHang", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @if (ViewBag.Success != null)
        {
            <div id="thongBaoThanhCong" class="alert alert-success">@ViewBag.Success</div>
        }

        <div class="form-group">
            <label class="control-label col-md-3">Nhập hàng từ nhà cung cấp</label>
            <div class="col-md-10">
                @Html.DropDownList("MaDonDatHangNCC", null, "Chọn đơn để nhập hàng", new { @class = "form-control", style = "height: 35px", @required = "required" })
                @Html.ValidationMessageFor(model => model.MaDonDatHangNCC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left: 13px;">
            <span>
                @Html.ActionLink("Trở về", "AD_ShowAllPhieuNhapHang", new { id = "" }, new { @class = "btn btn-primary" })
            </span>
            <span class="col-md-offset-2 col-md-10">
                <input type="submit" value="Nhập" class="btn btn-primary" />
            </span>
        </div>
    </div>
}

