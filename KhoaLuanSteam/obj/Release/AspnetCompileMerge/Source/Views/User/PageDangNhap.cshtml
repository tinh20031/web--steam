    document.getElementById('loginButton').addEventListener('click', function (event) {
        // Ngăn chặn hành vi mặc định của nút submit
        event.preventDefault();
        // Lấy form hiện tại và gửi nó
        var form = document.querySelector('form');
        form.submit();
    });

</script>
<style>
    .login,
    .image {
    min-height: 100vh;
    }

    .bg-image {
    background-image: url('https://bootstrapious.com/i/snippets/sn-page-split/bg.jpg');
    background-size: cover;
    background-position: center center;
    }
</style>

<section class="breadcrumb-section set-bg" data-setbg="/assets/ecommerce/img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Đăng Nhập</h2>
                        <div class="breadcrumb__option">
                            <a href="/">Trang Chủ</a>
                            <span>Đăng Nhập</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

@using (Html.BeginForm("PageDangNhap", "User", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="container-fluid">
    <div class="row no-gutter m-5">
        <!-- The image half -->
        <div class="col-md-6 d-none d-md-flex bg-image"></div>


        <!-- The content half -->
        <div class="col-md-6 bg-light">
            <div class="login d-flex align-items-center py-5">

                <!-- Demo content-->
                <div class="container">
                    <div class="row">
                        <div class="col-lg-10 col-xl-7 mx-auto">
                            <h3 class="display-4">Đăng Nhập</h3>
                            <p class="text-muted mb-4">Xin chào quý khách !</p>
                            <form>
                                <div class="form-group mb-3">
                                    @Html.TextBoxFor(model => model.TenDN, new { @class = "form-control rounded-pill border-0 shadow-sm px-4", @autofocus = "autofocus", @placeholder = "Tên đăng nhập" })
                                </div>
                                @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })
                                <div class="form-group mb-3">
                                    @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control rounded-pill border-0 shadow-sm px-4 text-primary", @placeholder = "Mật khẩu" })
                                </div>
                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                <div class="custom-control custom-checkbox mb-3">
                                    <input id="customCheck1" type="checkbox" checked class="custom-control-input">
                                    <label for="customCheck1" class="custom-control-label">Nhớ mật khẩu</label>
                                </div>
                                @*<button type="submit" class="btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm" style=" margin-top: 30px; color:#00ffff">Đăng Nhập</button>*@
                                <button id="loginButton" type="submit" class="btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm" style="margin-top: 30px; color:#00ffff">Đăng Nhập</button>
                                <div class="text-center d-flex justify-content-between mt-4">
                                    <p>
                                        Bạn chưa có tài khoản ? <a href="/User/DangKy" class="font-italic text-muted">
                                            <u>Đăng Kí</u>
                                        </a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div><!-- End -->

            </div>
        </div><!-- End -->

    </div>
</div>
}