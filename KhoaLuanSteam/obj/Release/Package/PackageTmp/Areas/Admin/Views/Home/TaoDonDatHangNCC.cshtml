@{
    ViewBag.Title = "TaoDonDatHangNCC";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

@model KhoaLuanSteam.Models.DonDatHangNCC


<h2 style="text-align: center;">Chọn nhà cung cấp</h2>
@using (Html.BeginForm("TaoDonDatHangNCC", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @if (ViewBag.Success != null)
        {
            <div id="thongBaoThanhCong" class="alert alert-success">@ViewBag.Success</div>
        }
        <div class="form-group">
            <label class="control-label col-md-2">Loại</label>
            <div class="col-md-10">
                @Html.DropDownList("MaNCC", null, "Chọn Nhà Cung Cấp", new { @class = "form-control", style = "height: 35px", @required = "required" })
                @Html.ValidationMessageFor(model => model.MaNCC, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="margin-left: 13px;">
            <span>
                @Html.ActionLink("Trở về", "AD_ShowAllDonDatHangNCC", new { id = "" }, new { @class = "btn btn-primary" })
            </span>
            <span class="col-md-offset-2 col-md-10">
                @*<input type="submit" value="Thêm" class="btn btn-primary" />*@
                <input type="submit" value="Tiếp tục" class="btn btn-primary" />
            </span>
        </div>
    </div>
}
