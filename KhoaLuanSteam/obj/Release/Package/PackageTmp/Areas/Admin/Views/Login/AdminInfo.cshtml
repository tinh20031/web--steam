@{
    ViewBag.Title = "AdminInfo";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<style>
    img {
        max-width: 100%;
    }
</style>
@model KhoaLuanSteam.Models.NHANVIEN
