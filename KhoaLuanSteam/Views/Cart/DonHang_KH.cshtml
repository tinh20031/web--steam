<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="mt-3">Đơn hàng đã giao thành công</h2>
            @if (Model.Count() != 0)
            {
                <table class="table mt-5 mb-5" id="myTable">
                    <thead>
                        <tr>
                            <th>
                                Mã phiếu đặt hàng
                            </th>
                            <th>
                                Ngày Đặt
                            </th>
                            <th>
                                Trạng Thái
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Reverse())
                        {
                            if (item.TinhTrang > 2)
                            {
                                <tr id="row_@item.MaPhieuDH">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaPhieuDH)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayDat)
                                    </td>
                                    <td>
                                        <a href='@Url.Action("DetailsDonDatHang", "Cart", new { id = item.MaPhieuDH })'>Xem</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            }
            else
            {
                    <div style="color:red;    margin-top: 10px;    width: 100%;    font-size: 15px;    margin-left: 30px;    margin-bottom: 30px;">Xin Lỗi Bạn Chưa Có Đơn Hàng Nào !</div>
            }
        </div>
        <div class="col-6">
            <h2 class="mt-3">Đơn hàng chưa giao tới</h2>
            @if (Model.Count() != 0)
            {
                <table class="table mt-5 mb-5" id="myTable">
                    <thead>
                        <tr>
                            <th>
                                Mã phiếu đặt hàng
                            </th>
                            <th>
                                Ngày Đặt
                            </th>
                            <th>
                                Trạng Thái
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Reverse())
                        {
                            if (item.TinhTrang < 3)
                            {
                                <tr id="row_@item.MaPhieuDH">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaPhieuDH)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayDat)
                                    </td>
                                    <td>
                                        <a href='@Url.Action("DetailsDonDatHang", "Cart", new { id = item.MaPhieuDH })'>Xem</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            }
            else
            {
                <div style="color:red;    margin-top: 10px;    width: 100%;    font-size: 15px;    margin-left: 30px;    margin-bottom: 30px;">Xin Lỗi Bạn Chưa Có Đơn Hàng Nào !</div>
            }
        </div>
    </div>
</div>