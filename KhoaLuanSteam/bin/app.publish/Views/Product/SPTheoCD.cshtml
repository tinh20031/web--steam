@{
    ViewBag.Title = "SPTheoCD";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@model IEnumerable<KhoaLuanSteam.Models.THONGTINSANPHAM>
    
<!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="/assets/ecommerce/img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Tất Cả Sản Phẩm</h2>
                        <div class="breadcrumb__option">
                            <a href="/">Trang Chủ</a>
                            <span>Sản Phẩm Theo Loại</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-5">
                    <div class="sidebar">
                        <div class="sidebar__item">
                            <h4>Danh Mục Sản Phẩm</h4>
                            @Html.Action("ShowTheLoai", "Product")
                        </div>
                        <div class="sidebar__item">
                            <h4>Danh Mục Nhà Cung Cấp</h4>
                            @Html.Action("ShowNCC", "Product")
                            
                        </div>
                        <div class="sidebar__item">
                            <div class="latest-product__text">
                                <h4>Sản Phẩm Mới</h4>
                                <div class="latest-product__slider owl-carousel">
                                    <div class="latest-prdouct__slider__item">
                                        @Html.Action("LatestProducts", "Product")
                                    </div>
                                    <div class="latest-prdouct__slider__item">
                                        @Html.Action("LatestProducts", "Product")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-md-7">
                    <div class="filter__item">
                        <div class="row">
                            <h2>@ViewBag.TenLoai</h2>
                        </div>
                    </div>
                    <div class="row">
                        @foreach (var item in Model)
                        {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg product__discount__item__pic">
                                    <a href="~/Product/ChiTietSP/@item.MaSanPham">
                                        <img src="/HinhAnhSach/@item.HinhAnh" alt="@item.TenSanPham" title="@item.TenSanPham">
                                    </a>
                                    @if (@item.GiamGia > 0){
                                        <div class="product__discount__percent">-@item.GiamGia%</div>
                                    }
                                    <ul class="product__item__pic__hover ">
                                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                        <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                        <li><a href="/Cart/ThemGioHang/?id=@item.MaSanPham&soluong=1"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="~/Product/ChiTietSP/@item.MaSanPham">@item.TenSanPham</a></h6>
                                    <span style="display: flex;justify-content: center;">
                                        @* <h5>@item.GiaSanPham.Value.ToString("N0") đ</h5>
                                        @if (@item.GiamGia > 0){
                                            @Html.Action("giasachgiam", "Product", new { @MaSanPham = @item.MaSanPham })
                                        } *@

                                        @if (@item.GiamGia <= 0)
                                        {
                                            <h5>
                                                @item.GiaSanPham.Value.ToString("N0") đ
                                            </h5>
                                        }else{
                                            <h5>
                                                @Html.Action("giasachgiam", "Product", new { @MaSanPham = @item.MaSanPham })
                                            </h5>
                                            <span style="text-decoration: line-through; color:#b2b2b2; font-size: 15px; margin-left: 10px;">
                                                @item.GiaSanPham.Value.ToString("N0") đ
                                            </span>
                                        } 

                                    </span>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Product Section End -->
