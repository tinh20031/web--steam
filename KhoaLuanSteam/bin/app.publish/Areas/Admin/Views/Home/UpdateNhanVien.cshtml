@model KhoaLuanSteam.Models.NHANVIEN
@{
    ViewBag.Title = "UpdateNhanVien";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2 style="text-align: center;">Cập nhật nhân viên</h2>
@using (Html.BeginForm("UpdateNhanVien", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @if (ViewBag.Success != null)
        {
            <div id="thongBaoThanhCong" class="alert alert-success">@ViewBag.Success</div>
        }
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaNV)
        <div class="form-group">
            <label class="control-label col-md-2">Tên nhân viên</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TenNV, new { @class = "form-control", placeHolder = "", @required = "required" })
                @Html.ValidationMessageFor(model => model.TenNV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày sinh</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NgaySinh, new { @class = "form-control", placeHolder = "", @required = "required" })
                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <fieldset class="form-group">
            <label class="control-label col-md-2">Giới tính</label>
            <div class="col-md-10">
                @Html.RadioButtonFor(Model => Model.GioiTinh, "Nam") Nam &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                @Html.RadioButtonFor(Model => Model.GioiTinh, "Nữ")Nữ
            </div>
        </fieldset>

        <fieldset class="form-group">
            <label class="control-label col-md-2">Email</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeHolder = "Example@gmail.com", @required = "required" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </fieldset>

        <div class="form-group">
            <label class="control-label col-md-2">Số điện thoại</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.SoDT, new { @class = "form-control", placeHolder = "", @required = "required" })
                @Html.ValidationMessageFor(model => model.SoDT, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
                @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <img src="/img/@Model.HinhAnh" width="100" height="150" />
                    <input type="file" name="fileUpload" value="@Model.HinhAnh" /> Cập nhật ảnh
                    @ViewBag.Alert
                    @Html.EditorFor(model => model.HinhAnh, new { @class = "form-control" })
                </div>
            </div>*@


        <div class="form-group">
            <label class="control-label col-md-2">Tên đăng nhập</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TenDN, new { @class = "form-control", placeHolder = "", @required = "required" })
                @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mật khẩu</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.MatKhau, new { @class = "form-control", Type = "PassWord", placeHolder = "", @required = "required" })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Phân quyền</label>
            <div class="col-md-10">
                @Html.DropDownList("ID_PhanQuyen", null, new { @class = "form-control", style = "height: 35px", @required = "required" })
                @Html.ValidationMessageFor(model => model.ID_PhanQuyen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left: 13px;">
            <span>
                @Html.ActionLink("Trở về", "AD_ShowAllNV", new { id = "" }, new { @class = "btn btn-primary" })
            </span>
            <span class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </span>
        </div>
    </div>
}